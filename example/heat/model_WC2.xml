		<Params Density="1000kg/m3" gauge="1"/>
	</Units>

	<Geometry nx="0.01m" ny="0.01m+2">

		<BGK>
			<Box/>
		</BGK>

		<Wall mask="ALL">
			<Box dy="0" ny="1"/>
			<Box dy="-1" ny="1"/>
		</Wall>

		<InletGauge>
			<Box dx="0" nx="1"/>
		</InletGauge>

		<OutletGauge>
			<Box dx="-1" nx="1"/>
		</OutletGauge>
	</Geometry>

	<Model>
		<Params InitTemperature="300K"/>
		<Params AlfaFluid="0.1666"/>
