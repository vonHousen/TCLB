
<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/WC6/">

	<Units>
		<Params Size="0.0001m"      gauge="1"/>
		<Params Nu="1e-5m2/s"       gauge="0.166666666"/>
		<Params Density="1000kg/m3" gauge="1"/>
	</Units>

	<Geometry nx="0.02m" ny="0.02m">

		<BGK>
			<Box/>
		</BGK>

		<Wall mask="ALL">
			<Box dy="0" ny="1"/>
			<Box dy="-1" ny="1"/>
		</Wall>

		<WallSouth>
			<Box dy="0" ny="1"/>
		</WallSouth>

		<WallNorth>
			<Box dy="-1" ny="1"/>
		</WallNorth>

		<PseudoWall>
			<Box   dy="0.005m" ny="0.01m"/>
		</PseudoWall>


	</Geometry>

	<Model>
		<Params InitTemperature="300K"/>
		<Params AlfaFluid="0.1"/>
		<Params AlfaSolid="1.0"/>
		<Params Q="0.1"/>
		<Params W_init="0.5"/>

	</Model>

	<VTK/>
	<Solve Iterations="20000">
		<Log Iterations="1000"/>
		<VTK Iterations="1000"/>
	</Solve>



</CLBConfig>
